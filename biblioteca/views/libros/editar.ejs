<% include ../layouts/cabecera.ejs %> 

<div class="card mt-2">
    <div class="card-header">
        Formulario de captura
    </div>
    <div class="card-body">
        <h5 class="card-title">Editar datos del libro</h5>
        <p class="card-text">
            <form action="../actualizar/" method="post" enctype="multipart/form-data">
                <input type="hidden" name="id" value="<%= libro.id %> ">
                <div class="form-group">
                    <label for="nombre">Nombre</label>
                    <input id="my-input" class="form-control" type="text" name="nombre" value="<%= libro.nombre %> ">
                </div>
            
                <div class="form-group">
                    <label for="archivo">Imagen</label>
                    <img class="img-thumbnail" src="<%='/images/'+libro.imagen %> " alt="imagen" width="100">
                    <input id="my-input"
                    
                    class="form-control-file" type="file" name="archivo">
                </div>
            
                <button class="btn btn-success" type="submit">Actualizar</button>
                <a href="/libros" class="btn btn-primary">Cancelar</a>
            </form>
        </p>
    </div>
</div>


<% include ../layouts/pie.ejs %> 

<script>
    document.title= 'Editar libro'
</script>